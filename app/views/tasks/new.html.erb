<h1>タスク新規作成ページ</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  <%= f.label :status, 'ステータス' %>
  <%= f.select(:status, [['TO DO', "TO DO"], ['IN PROGRESS', "IN PROGRESS"], ['DONE', "DONE"]]) %>

  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>